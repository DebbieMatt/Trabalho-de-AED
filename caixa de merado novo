int main()
{
  int codigo_menu;

  do
  {
    printf("\n1 simular compra");
    printf("\n2 consultar debitos de clientes do crediario");
    printf("\n3 preencher estoque");
    printf("\n4 pagar debitos de clientes do cediario (total ou parcial)");
    printf("\n5 sortear um cliente que tera sua dívida do crediário perdoada");
    printf("\n-1 codigo de parada ");
    printf("\nDigite sua opcão: ");
    scanf("%d", &codigo_menu);

    if (codigo_menu == -1)
    {
      break;
    }
    switch (codigo_menu)
    {
    case 1:
      compra();
      break;

    default:
      break;
    }

  } while (codigo_menu != -1);

  return 0;
}

